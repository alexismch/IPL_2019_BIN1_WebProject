Options +FollowSymlinks
RewriteEngine on

RewriteRule ^index index.php [NC,L]
RewriteRule ^register index.php?page=register [NC,L]
RewriteRule ^login index.php?page=login [NC,L]
RewriteRule ^question/([a-zA-Z_-]+) index.php?page=question&action=$1 [NC,L]
RewriteRule ^question/([0-9]+)/([0-9a-zA-Z_-]+) index.php?page=question&id=$1&name=$2 [NC,L]
RewriteRule ^search/([0-9a-zA-Z_-]+) index.php?page=search&key=$1 [NC,L]
RewriteRule ^category/([0-9a-zA-Z_-]+) index.php?page=category&catname=$1 [NC,L]
RewriteRule ^user/([0-9a-zA-Z_-]+) index.php?page=user&username=$1 [NC,L]

RewriteRule	!\.(js|gif|css|jpg|jpeg|png|map|json)$	index.php  [L]

ErrorDocument 400 /index.php
ErrorDocument 401 /index.php
ErrorDocument 402 /index.php
ErrorDocument 403 /index.php
ErrorDocument 404 /index.php
ErrorDocument 405 /index.php
ErrorDocument 406 /index.php
ErrorDocument 407 /index.php
ErrorDocument 408 /index.php
ErrorDocument 409 /index.php
ErrorDocument 410 /index.php
ErrorDocument 411 /index.php
ErrorDocument 412 /index.php
ErrorDocument 413 /index.php
ErrorDocument 414 /index.php
